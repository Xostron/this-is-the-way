{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
